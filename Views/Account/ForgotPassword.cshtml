@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên Mật Khẩu</title>
    <link rel="stylesheet" href="~/css/ForgotPassword.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>

<body>
    <div class="container">
        <div class="form-container forgot-pw">
            <form>
                <p>Quên Mật Khẩu</p>
                <span>Nhập địa chỉ Email của bạn để nhận code lấy lại mật khẩu!</span>
                <input type="email" placeholder="Email" class="sign-in-email">
                <a href="#" class="send-code-btn">
                    <a href="#" class="send-code-btn" onclick="openPopUp()">
                        <button>Gửi Mã</button>
                    </a>
                </a>
            </form>
        </div>
    </div>
    <div class="pop-up" id="codePopUp">
        <div class="pop-up-content">
            <span class="close" onclick="closePopUp()">&times;</span>
            <p class="pop-up-tiltle">Kiểm tra Email của bạn!</p>
            <p class="pop-up-info">Chúng tôi đã gửi code vào email của bạn</p>
            <input type="text" id="verificationCode" placeholder="Nhập mã xác thực">
            <div class="pop-up-footer">
                <button type="button" class="send-code-btn" onclick="submitCode()">Xác thực</button>
            </div>
        </div>
    </div>
    <script src="../js/ForgotPassword.js"></script>
</body>

</html>